
public class Stars {
	public static void main(String[] args) {
		String[] list = {"Hello", "World", "In", "A", "Frame"};
		printListInAFrame( list );
	}
	
	private static void printListInAFrame( String[] list ) {
		// Find Longest Word
		int longest = 0;
		for ( String str: list) {
			if (str.length() > longest) {
				longest = str.length();
			}
		}
		// First Row of Stars
		for ( int i = 0; i < longest + 4; i++) {
			System.out.print("*");
		}
		System.out.println();
		// The words
		for ( String str: list) {
			System.out.print("* " + str );
			for (int i = 0; i < longest - str.length(); i++) {
				System.out.print(" ");
			}
			System.out.println(" *");
		}
		// Last Row of Stars
		for ( int i = 0; i < longest + 4; i++) {
			System.out.print("*");
		}
	}
}
